<?xml version="1.0"?>
<config>
    <modules>
        <Oussama_Sample>
            <version>0.1.1</version>
        </Oussama_Sample>
    </modules>
    <global>
        <models>
            <oussama_sample>
                <class>Oussama_Sample_Model</class>
                <resourceModel>oussama_sample_resource</resourceModel>
            </oussama_sample>
            <oussama_sample_resource>
                <class>Oussama_Sample_Model_Resource</class>
                <entities>
                    <Item>
                        <table>sample_item</table>
                    </Item>
                </entities>
            </oussama_sample_resource>
        </models>
        <blocks>
            <oussama_sample>
                <class>Oussama_Sample_Block</class>
            </oussama_sample>
        </blocks>
        <helpers>
            <oussama_sample>
                <class>Oussama_Sample_Helper</class>
            </oussama_sample>
        </helpers>
        <resources>
            <oussama_sample_setup>
                <setup>
                    <module>Oussama_Sample</module>
                </setup>
            </oussama_sample_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <items>
                <use>standard</use>
                <args>
                    <frontName>items</frontName>
                    <module>Oussama_Sample</module>
                </args>
            </items>
        </routers>
        <layout>
            <updates>
                <oussama_sample>
                    <file>oussama_sample.xml</file>
                </oussama_sample>
            </updates>
        </layout>
        <routers>
            <items>
                <use>standard</use>
                <args>
                    <module>Oussama_Sample</module>
                    <frontName>samples_items</frontName>
                </args>
            </items>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Oussama_Sample before="-">Oussama_Sample_adminhtml</Oussama_Sample>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>